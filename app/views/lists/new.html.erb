<h1>New List</h1>

<%= form_with model: @list, local: true do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter name" %>
  </div>

  <div class="actions">
    <%= form.submit 'Create List' %>
  </div>
<% end %>

<%= link_to 'Back to Lists', lists_path %>
